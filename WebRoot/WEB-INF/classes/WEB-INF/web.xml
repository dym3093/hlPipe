<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name></display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>
			org.springframework.web.util.IntrospectorCleanupListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>websGene</servlet-name>
    <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>websGene</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  <!-- add by DengYouming 2016-08-26 start  -->
 <servlet>
    <servlet-name>FetchReportServlet</servlet-name>
    <servlet-class>org.hpin.webservice.foreign.FetchReportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FetchReportServlet</servlet-name>
    <url-pattern>/fetchReport</url-pattern>
  </servlet-mapping>
